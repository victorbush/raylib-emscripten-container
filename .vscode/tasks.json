{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Re-configure CMake",
      "type": "shell",
      "command": "rm -rf ./build && cmake -S . -B build -G Ninja -DPLATFORM=Web \"-DCMAKE_TOOLCHAIN_FILE=/emsdk/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake\"",
      "group": {
        "kind": "none",
        "isDefault": false
      }
    },
    {
      "label": "Build",
      "type": "shell",
      "command": "cmake --build build",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
